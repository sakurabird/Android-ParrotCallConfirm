<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_pink"
            android:text="@string/welcome"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="@dimen/font_medium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_xlarge"
            android:text="@string/about"
            android:textSize="@dimen/font_medium" />

        <include layout="@layout/view_boader" />

        <RelativeLayout
            android:id="@+id/menu_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large">

            <ImageView
                android:id="@+id/image_setting"
                android:layout_width="@dimen/main_list_icon_size"
                android:layout_height="@dimen/main_list_icon_size"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/main_list_icon_margin_left"
                android:src="@drawable/inco2" />

            <TextView
                android:id="@+id/text_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/image_setting"
                android:text="@string/action_settings"
                android:textSize="@dimen/font_large" />
        </RelativeLayout>

        <include layout="@layout/view_boader" />

        <RelativeLayout
            android:id="@+id/menu_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large">

            <ImageView
                android:id="@+id/image_share"
                android:layout_width="@dimen/main_list_icon_size"
                android:layout_height="@dimen/main_list_icon_size"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/main_list_icon_margin_left"
                android:src="@drawable/inco3" />

            <TextView
                android:id="@+id/text_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/image_share"
                android:text="@string/share"
                android:textSize="@dimen/font_large" />
        </RelativeLayout>

        <include layout="@layout/view_boader" />

        <RelativeLayout
            android:id="@+id/menu_googleplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large">

            <ImageView
                android:id="@+id/image_googleplay"
                android:layout_width="@dimen/main_list_icon_size"
                android:layout_height="@dimen/main_list_icon_size"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/main_list_icon_margin_left"
                android:src="@drawable/inco4" />

            <TextView
                android:id="@+id/text_googleplay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/image_googleplay"
                android:text="@string/text_google_play"
                android:textSize="@dimen/font_large" />
        </RelativeLayout>

        <include layout="@layout/view_boader" />

        <RelativeLayout
            android:id="@+id/menu_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large">

            <ImageView
                android:id="@+id/image_credit"
                android:layout_width="@dimen/main_list_icon_size"
                android:layout_height="@dimen/main_list_icon_size"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/main_list_icon_margin_left"
                android:src="@drawable/inco5" />

            <TextView
                android:id="@+id/text_credit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/image_credit"
                android:text="@string/text_credit"
                android:textSize="@dimen/font_large" />
        </RelativeLayout>

        <include layout="@layout/view_boader" />

        <RelativeLayout
            android:id="@+id/menu_mail_to_dev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large">

            <ImageView
                android:id="@+id/image_mail_to_dev"
                android:layout_width="@dimen/main_list_icon_size"
                android:layout_height="@dimen/main_list_icon_size"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/main_list_icon_margin_left"
                android:src="@drawable/inco6" />

            <TextView
                android:id="@+id/text_mail_to_dev"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/image_mail_to_dev"
                android:text="@string/text_mail_to_dev"
                android:textSize="@dimen/font_large" />
        </RelativeLayout>

        <include layout="@layout/view_boader" />

        <RelativeLayout
            android:id="@+id/ad_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>