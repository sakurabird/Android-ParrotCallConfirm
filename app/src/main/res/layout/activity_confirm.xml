<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:padding="@dimen/margin_large"
    android:background="@drawable/confirm_dialog_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_xlarge"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textSize="@dimen/font_xlarge" />

        <ImageView
            android:id="@+id/imageView_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/perm_group_system_tools" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_inco"
            android:layout_width="@dimen/confirm_icon_size"
            android:layout_height="@dimen/confirm_icon_size"
            android:src="@drawable/inco_blue" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_large"
            android:src="@drawable/inco_blue" />

        <ImageView
            android:id="@+id/imageView_callto"
            android:layout_width="@dimen/confirm_icon_size"
            android:layout_height="@dimen/confirm_icon_size"
            android:src="@drawable/inco_blue" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_info1"
        android:textSize="@dimen/font_medium" />

    <TextView
        android:id="@+id/textView_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/message_confirm1"
        android:textSize="@dimen/font_xlarge" />

    <TextView
        android:id="@+id/textView_message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/message_confirm1"
        android:textSize="@dimen/font_xlarge" />

    <TextView
        android:id="@+id/textView_telno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="@dimen/font_xlarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_large"
            android:drawableLeft="@android:drawable/ic_menu_call"
            android:text="@string/yes" />

        <Button
            android:id="@+id/button_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_delete"
            android:text="@string/no" />

    </LinearLayout>
</LinearLayout>